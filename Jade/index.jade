mixin css(src)
    -src = 'CSS/' + src
    link(href=src, rel="stylesheet", type="text/css")
mixin script(src)
    -src = 'JS/' + src
    script(type="text/javascript", src=src)
    
html
    head
        title
            |SoftDoggy Games
            block title
                | Home
        +css('MenuBar.css')
        +css('Base.css')
        +script('JQuery.js')
        +script('MenuBar.js')
        block head
            +script('Home.js')
            +css('Home.css')
    body
        #menuButtonDiv
            #horizMenuList.menuList
                ul
                    li#logo.MenuItem(goto='/index.html') Home
                    li.MenuItem(goto='/about.html') About
                    li.MenuItem(goto='/finished.html') Finished Projects
                    li.MenuItem(goto='/wips.html') WIP Projects
                button#menuButton
                    #topBar.menuButton
                    #bottomnBar.menuButton
            #vertMenuList.menuList
                ul
                    li.MenuItem(goto='/about.html') About
                    li.MenuItem(goto='/finished.html') Finished Projects
                    li.MenuItem(goto='/wips.html') WIP Projects
